<div class="small-6 large-5 columns sidebar">
    <ul class="no-bullet">
       {{#each queryResults as |build|}}
            {{display-build build=build action="openConfirm"}}
            {{else}}
                <li class="empty-list">
                    {{t 'empty_build_list'}}
                </li>
        {{/each}}
    </ul>
    {{#if showConfirm}}
        <div class="alert-panel" style="top:{{confirmTop}};  left: {{confirmLeft}}">
            <p>{{t 'confirmation.question'}} <strong>{{buildToDelete.name}}</strong>
            {{t 'confirmation.info'}} <strong>{{tolowercase buildToDelete.status}}</strong>?</p>
            <div class="clearfix">
                <a {{action "deleteBuild" buildToDelete}} class="right button small alert radius">{{t 'buttons.cancel'}}</a>
                <a {{action "closeConfirm"}} class="left">{{t 'buttons.cancel'}}</a>
            </div>
        </div>
    {{/if}}
</div>
<div class="small-6 large-7 columns main">
    {{partial "create-build"}}
    {{outlet}}
</div>
