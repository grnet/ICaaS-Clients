	  </section>

	  <section class="logout small-6 large-7 columns">
	  <ul class="inline-list right">
		<li>
			<a href="">
				{{fa-icon "question-circle"}}
				<label>Help</label>
			</a>
		</li>
		<li>
			<a href="">
				{{fa-icon "sign-out"}}
