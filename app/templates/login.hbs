<div class="middle">
    <div class="login">
        <p class="intro panel">
            {{{t 'intro'}}}
        </p>
        <form>
            <label for="token" class="right">{{t 'labels.token'}}</label>
            <div class="input-with-error">
                {{input value=token id="token"}}
                <i class="login-info">
                    {{t "links.api_access.descr_aux"}} {{#external-link href="settings.api_access_url"}}{{t "links.api_access.descr"}}{{/external-link}}.
                </i>
                {{#if error}}
                    <div class="alert-box alert">
                        <a {{action 'hideErrors'}} title="Hide errors" class="close">{{fa-icon "fa-close"}}</a>
                        {{errorMsg}}
                    </div>
                {{/if}}
            </div>
            <button {{action 'tryLogin'}} class="small">{{t "buttons.login"}}</button>
        </form>
    </div>
</div>
